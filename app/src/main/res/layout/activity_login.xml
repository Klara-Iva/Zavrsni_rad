<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="338dp"
        android:layout_height="333dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-133dp"
        android:layout_marginEnd="-94dp"
        app:srcCompat="@drawable/fullcircle"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="-111dp"
        app:tint="@color/orange_variant" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="257dp"
        android:layout_height="267dp"
        android:layout_marginTop="-130dp"
        android:layout_marginEnd="-60dp"
        android:layout_toStartOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fullcircle"
        app:tint="@color/orange" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="lozinka"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="email@gmail.com"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginbuttonmain"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="PRIJAVA"
        android:textSize="16dp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <Button
        android:id="@+id/registerButtonSide"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="registriraj se"
        android:textSize="14dp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerButtonSide"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Prvi puta ovdje?"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/registerButtonSide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Virovitički\nTuristički\nVodič"
        android:textAlignment="center"
        android:textColor="?colorSecondary"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="79dp"
        android:layout_toStartOf="@+id/textView13"
        android:rotation="-20"
        app:srcCompat="@drawable/heart"
        app:tint="@color/orange_variant"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="288dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="66dp"
        android:rotation="-10"
        app:srcCompat="@drawable/ic_baseline_location_on_24"
        app:tint="?colorSecondary"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="14dp"
        android:rotation="10"
        app:srcCompat="@drawable/ic_luggage"
        app:tint="@color/orange" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="58dp"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/textView13"
        android:rotation="0"
        app:srcCompat="@drawable/ic_pamphlet"
        app:tint="?colorSecondary" />

</RelativeLayout>