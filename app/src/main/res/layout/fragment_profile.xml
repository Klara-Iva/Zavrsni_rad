<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dialog"
        app:tint="?colorPrimaryVariant" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dialog2" />

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/userProfilePicture"
        android:text="Username"
        android:textColor="?colorSecondary"
        android:textSize="30dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userProfilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ic_baseline_person_24"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/profilePicture"

        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="27dp"

        android:layout_alignParentTop="true"

        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="KORISNIČKI RAČUN"
        android:textAlignment="textStart"
        android:textColor="?colorOnSecondary"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="27dp"
        android:text="email:"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/UserEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView6"
        android:hint="ime.prezime@gmail.com"
        android:textColor="?colorSecondary"
        android:textSize="16dp" />

    <Button
        android:id="@+id/UpdateProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/UserEmailText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Promjeni sliku profila"
        android:textSize="14dp"
        app:cornerRadius="20dp" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdateProfilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Vaš broj ocijenjenih lokacija:"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/gradedLocationsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="number"
        android:textColor="?colorSecondary"
        android:textSize="20dp" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addLocationButton"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Ponovno postavljenje lozinke"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetPasswordButton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="80dp"
        android:text="ODJAVA"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="76dp"
        app:srcCompat="@drawable/ic_starts"
        app:tint="#E7766B" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aboutApp"
        android:layout_alignBottom="@+id/aboutApp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/ic_outline_info_24"
        app:tint="?colorSecondary" />

    <TextView
        android:id="@+id/aboutApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="0dp"

        android:paddingLeft="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="O aplikaciji"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/helpCenter"
        android:layout_alignBottom="@+id/helpCenter"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/ic_help_outline_24"
        app:tint="?colorSecondary" />


    <TextView
        android:id="@+id/helpCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutApp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Podrška"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/addLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpCenter"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Dodaj lokaciju"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/PlusIconToAddLocation"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addLocationButton"
        android:layout_alignBottom="@+id/addLocationButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:tint="?colorSecondary" />

</RelativeLayout>
</ScrollView>
